public class DigitSumChallenge {
    public static void main(String[] args){
        System.out.println("The sum of the digits = " + sumDigits(1234));



    }
    public static int sumDigits(int number)
    {
        int sumofDigits = 0;

        if(number < 0){
            return -1;
        }

        while(number > 0){

            sumofDigits += (number % 10);
            number = number / 10;

        }

        return sumofDigits;
    }


}
